// DESCRIPTION:
// Very simple, given an integer or a floating-point number, find its opposite.

// Examples:

// 1: -1
// 14: -14
// -34: 34

//My solution
function opposite(number) {
    if (number < 0){
      return Math.abs(number)
    }else{
      return 0 - number
    }
  }

  //My other solution
  function opposite(number){
    return number > 0 ? 0 - number : Math.abs(number)
  }

  //I didn't know you can just use -number. Here's the simplest solution.
  function opposite(number) {
    return(-number);
  }